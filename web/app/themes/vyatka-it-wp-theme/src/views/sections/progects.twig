            <img class="modal__wrapperProjectImage" src="{{ pico.photo }}" alt>
          {% endif %}

        {% endfor %}
      </div>
    </div>

    <div class="modal__imgPagination">
      {% for pico in item.project_photos %}
        {% if pico.photo %}
