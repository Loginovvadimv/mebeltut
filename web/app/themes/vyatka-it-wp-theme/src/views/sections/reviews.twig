<section class="reviews section">
    <div class="container">
        <div class="reviews__wrapper">
          <div class="reviews__container">
            <h2 class="reviews__title">Отзывы</h2>
            <div class="slider__arrows slider__arrows--reviews reviews__arrows">
              <button class="slider__arrow slider__arrow--prev" aria-label="Prev button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16.5 4L15 3L6 12.0001L15 21L16.5 20L8.5 12L16.5 4Z" fill="#0C0C0C"/>
                </svg>
              </button>
              <button class="slider__arrow slider__arrow--next" aria-label="Next button">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 4L7.5 3L16.5 12.0001L7.5 21L6 20L14 12L6 4Z" fill="#0C0C0C"/>
                </svg>
              </button>
            </div>
          </div>

            <div class="reviews__slider">
                <div class="swiper">
                    <div class="swiper-wrapper">
                      {% for item in reviews.rew_rep %}
                        <div class="reviews__wrap">
                          <img class="reviews__wrapFrame" src="{{ assets }}/images/projects/Frame.svg">
                          <div class="reviews__wrapClient">
                            <img class="reviews__client" src="{{ item.img ? item.img : plug_client }}" alt="{{ item.name }}">
                            <div class="reviews__wrapClientText">
                              <div class="reviews__name Control_L text-body">{{ item.name }}</div>
                              <div class="reviews__date text-caption Control_S">{{ item.time }}</div>
                            </div>
                          </div>

                          <div class="reviews__descr Control_M text-body">{{ item.descr }}
                            <div class="reviews__photos">
                              {% for pic in item.photos %}
                                <a class="reviews__photo" data-fancybox="reviews" href="{{ pic.photo }}"><img class="reviews__img" src="{{ pic.photo }}" alt></a>
                              {% endfor %}
                            </div>
                          </div>

                        </div>
                      {% endfor %}
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

{% for item in reviews.rew_rep %}
<div class="modal open" data-modal-type="client" hidden>
  <div class="modal__wrapper form__wrapper">

    <button class="modal__close modal__close--fixed" type="button">
    </button>
  </div>

</div>
{% endfor %}
